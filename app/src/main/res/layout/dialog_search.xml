<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dim7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Meal"
            android:gravity="center"
            android:layout_margin="@dimen/dim5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim20" />

        <EditText
            android:id="@+id/searchTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimToolbar"
            android:background="@drawable/circle_white"
            android:paddingHorizontal="@dimen/dim5"
            android:layout_margin="@dimen/dim5"/>

        <Spinner
            android:id="@+id/searchSP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimToolbar"
            android:background="@drawable/circle_white"
            android:paddingHorizontal="@dimen/dim5"
            android:layout_margin="@dimen/dim5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/mainLocationSP"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimToolbar"
                android:background="@drawable/circle_white"
                android:paddingHorizontal="@dimen/dim5"
                android:layout_margin="@dimen/dim5" />

            <Spinner
                android:id="@+id/subLocationSP"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimToolbar"
                android:background="@drawable/circle_white"
                android:paddingHorizontal="@dimen/dim5"
                android:layout_margin="@dimen/dim5" />

        </LinearLayout>

        <Button
            android:id="@+id/searchBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_primary"
            android:text="Search"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/dim5"
            android:textSize="18dp"/>

    </LinearLayout>

</RelativeLayout>